<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Realm" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="itemFillColor">@color/black</item>
        <item name="colorPrimary">@color/idcapture_gold</item>
        <item name="colorPrimaryVariant">@color/idcapture_red</item>
        <item name="colorOnPrimary">@color/idcapture_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/idcapture_red</item>
        <item name="colorSecondaryVariant">@color/idcapture_green</item>
        <item name="colorOnSecondary">@color/idcapture_gold</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="app_realmBackground">@color/realm_background</item>
        <item name="realmSurfaceBackground">@color/white</item>
        <item name="realmStatusBarBackground">#f8f8ff</item>
        <item name="android:statusBarColor">#f8f8ff</item>
        <item name="android:fontFamily">@font/space_gortesk_font_family</item>
        <item name="colorPrimaryDark">@color/idcapture_gold</item>
    </style>
    <style name="Theme.Realm" parent="Base.Theme.Realm" />


    <style name="Theme.Realm.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:font" tools:targetApi="o">@font/space_grotesk_semi_bold</item>


    </style>

    <style name="Theme.Realm.SubTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">

        <item name="android:font" tools:targetApi="o">@font/space_grotesk_semi_bold</item>


    </style>

    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

    </style>
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>


        <item name="android:background">@null</item>
    </style>

    <style name="Base.Theme.Realm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.Realm">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight" />
    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
    </style>

</resources>